#! /usr/bin/env perl
#PODNAME: anki_import
use strict;
use warnings;
use Data::Dumper qw(Dumper);
use Anki::Import;


# hack to provide default path if not supplied by user
if (!$ARGV[1] || $ARGV[1] =~ /^-([a-z]|[A-Z])/) {
  splice @ARGV, 1, 0, cwd;
}

eval {
  anki_import(@ARGV);
}

#ABSTRACT: command line command for the Anki::Import module

__END__

=head1 SYNOPSIS

    anki_import path/to/source_file.txt

=head1 USAGE

Please see L<Anki::Import#Command line usage> for usage details.

=method k aksdj

kjsdf

=head1 SEE ALSO

L<Anki::Import>
